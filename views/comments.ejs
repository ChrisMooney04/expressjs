<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Comments</title>
</head>
<style>
  #name {
    border: 1px solid #000000;
    color: black;
    position: absolute;
    width: 300px;
    margin: auto;
  }
  #comment {
    border: 1px solid #000000;
    color: black;
    position: absolute;
    top: 100px;
    width: 300px;
    margin: auto;
    height: 100px;
  }
  #else{
    position: relative
  }
</style>

<body>
  <center>
    <h1>Feedback Page</h1>
  </center>
  <% comments.forEach(comment => { %>
  <div id='else'>
    <div id='name'>
      Name: <%-comment.name %>
    </div>
    <div id='comment'>
      Comment: <%-comment.adjective %>
    </div>
  </div>

  <% }) %>
</body>
<script type="text/javascript">
  JSON.readFileSync('comments.json')
</script>

</html>
