<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Comments</title>
</head>
<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    margin: 0;
  }

  .about-section {
    padding: 50px;
    text-align: center;
    background-color: #474e5d;
    color: white;
    height: 100px;
  }

  .box {
    position: relative;
    width: 320px;
    border: 1px solid #000000;
    margin: 10px;
    float: left;
    background-color: #474e5d;
  }

  .name {
    border: 1px solid #000000;
    color: black;
    width: 300px;
    margin: 10px;
    background-color: #FFFFFF;
  }

  .comments {
    border: 1px solid #000000;
    color: black;
    width: 300px;
    margin: 10px;
    height: 100px;
    background-color: #FFFFFF;
  }

  #bigbox {
    width: 90%;
    height: 500px;
    text-align: center;
    border: 1px solid #FFFFFF;
  }

  #tag {
    top: 10px;
    float: left;
    position: absolute;
    width: 500px;
  }
  #feedback {
    position: relative;
    text-align: center;
    border: 3px solid #FFFFFF;
    width: 30%;
    margin: auto;
  }
  #submit {
    margin: 10px;
    float: right;
    position: absolute;
  }
</style>

<body>
  <center>
    <div class='about-section'>
      <div id='feedback'>
        <h1>Feedback Page</h1>
        <p>Team F</p>
        <meta http-equiv="refresh" content="10">
      </div>
      <div id='tag'>
        <form action="/comments" method="post">
          <p1>Name</p1>
          <br>
          <input type="text" name="name" placeholder="Enter Name Here" value="">
          <br>
          <br>
          <p1>Comments</p1>
          <br>
          <input type="text" name="comments" placeholder="Enter Comments Here" value="" style="height:100px;width:300px">
          <input id='submit' type="submit" value="Submit" action="comments">
        </form>
      </div>
    </div>
  </center>
  <center>
    <div id="bigbox">
      <% comments.forEach(comment => { %>
      <div class="box">
        <div class="name">
          Name: <%-comment.name %>
        </div>
        <div class="comments">
          Comment: <%-comment.adjective %>
        </div>
      </div>

      <% }) %>
    </div>
  </center>
</body>

</html>
